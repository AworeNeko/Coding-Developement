#include <iostream>
using namespace ::std;

int const Max=30;

int Racers;
int RacerID[Max];
char RacerName[Max][80];
float RacerTime[Max][3];
float Minutes[Max];
float Seconds[Max];
void GetRacers(int &);
void RTime(float RacerTime[Max][3],int ,float Seconds[Max]);
 void SelectionSort(float Seconds[Max], int Racers);
void Display(float Racertime[Max][3],int Racers);

int main(){
    
   GetRacers( Racers);
   RTime(RacerTime,Racers,Seconds);
   SelectionSort(Seconds,Racers);
    Display(RacerTime,Racers);
        
        
    
    
    return 0;}
    
    
    void GetRacers(int &Racers){  cout<<"How many racers on the track: ";
    cin>>Racers;}
    
    void RTime(float RacerTime[Max][3],int Racers,float Seconds[Max]){
         for(int i=0;i<Racers;i++){
        cin.ignore();
        cout<<"Enter the racer name:";
        cin.getline(RacerName[i],80);
        cout<<"Enter the ID of:"<<RacerName[i]<<":"<<endl;
            cin>>RacerID[i];}
        
        cout<<"Enter the time started and ended"<<endl;
        for(int i=0;i<Racers;i++){
            for(int j=0;j<2;j++){
                cout<<"Enter the start time for "<<RacerName[i]<<": (in International Time)"<<endl;
                cin>>RacerTime[i][j];
                if(j=0){
                    cout<<"Enter start time:"<<endl;
                    
                }
                else if(j=1){cout<<"Enter End time"<<endl;
cin>>RacerTime[i][j];}
                    if(RacerTime[i][1]<RacerTime[i][0]){
                        cout<<"Sorry,time is incorrect.";
                    }
                    else{
                RacerTime[i][2]=RacerTime[i][1]-RacerTime[i][0];
                
                cout<<"Minutes took:"<<RacerTime[i][2]<<endl;
                Seconds[i]=RacerTime[i][2]*60;
                cout<<"Seconds took is: "<<Seconds[i]<<endl;}
        }}
    }
    
    
    void SelectionSort(float Seconds[Max], int Racers)
        {
        int startScan, minIndex, minValue;
       
             for (startScan = 0; startScan < (Racers - 1); startScan++)
             {
             minIndex = startScan;
             minValue = Seconds[startScan];
             for (int index = startScan + 1; index <Racers; index++)
                   {
                   if (Seconds[index] < minValue)
                        {
                        minValue = Seconds[index];
                        minIndex = index;
                        }
                   }
             Seconds[minIndex] = Seconds[startScan];
            Seconds[startScan] = minValue;
             }
        }
        
        
        
        
        
        void Display(float Racertime[Max][3],int Racers){
            
    for(int i=0;i<Racers;i++){
    for(int j=0;j<1;j++){

        cout<<RacerName[i]<<" ID of Racer: "<<RacerID[i]<<" Seconds took for the rider:"<<Seconds[i];}
        cout<<endl;}}
    

        
