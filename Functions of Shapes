//Triangle Formula

void GetBaseT(double &Base){
    cout<<"What is the base of the triangle:";
    cin>>Base;
    while(Base<0){
        cout<<"Base can't be negative.Try again.";
        cin>>Base;
    }
}

void GetHeight(double &Height){

    cout<<"What is the height of the Triangle:";
    cin>>Height;
    while(Height<0){
        cout<<"Sorry,Height can't be negative.Try again";
        cin>>Height;
    }
    
}
void CalTriangle(double Base,double Height,double &AreaTriangle){
    AreaTriangle = Base/2*Height;
}
void DisplayTriangle(double AreaTriangle,double Base,double Height){
    cout<<"The base of the triangle is: "<<Base<<endl;
    cout<<"The height of the triangle is "<<Height<<endl;
    cout<<"The area of the triangle is: "<<AreaTriangle<<endl;
}


//Circle Formula

void GetRadius(double &Radius){
    cout<<"What is the radius of the circle:";
    cin>>Radius;
    while(Radius<0){
        cout<<"Can't be negative.Try again.";
        cin>>Radius;
    }
}
void CalCirArea(double Radius,double &AreaCir){
    cout<<"Calculating..."<<endl;
    double PI = 3.1415;
    AreaCir = Radius * PI;
}
void DisplayCir(double AreaCir){
    cout<<"The area of the circle is: "<<AreaCir;
}


